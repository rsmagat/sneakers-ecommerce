<div class="col-sm-6 col-md-4 p-2">
    <div class="card border-0 shadow-sm">
        <a href="<%= sneaker_path(sneaker) %>"><%= image_tag (sneaker.image_path), class: "card-img-top shadow-sm img-fluid", alt: sneaker.name %></a>
        <div class="card-body">
            <h5 class="card-title"><%= link_to sneaker.name, sneaker_path(sneaker), class: "fw-bold text-warning text-decoration-none" %></h5>
            <% if sneaker.status == "sale" %>
                <div class="d-flex">
                    <p class="card-text text-mute text-decoration-line-through"><%= number_to_currency(sneaker.price) %></p>
                    <p class="card-text fw-bold mx-2"><%= number_to_currency(sneaker.sale_price) %></p>
                </div>
            <% else %>
                <p class="card-text fw-bold mx-2"><%= number_to_currency(sneaker.price) %></p>
            <% end %>
            <button class="btn btn-success shadow-sm mt-5 w-100 fw-bold text-uppercase">Add
                to Cart</button>
            <button class="btn btn-warning shadow-sm mt-2 w-100 fw-bold text-uppercase">Buy
                Now</button>
        </div>
    </div>
</div>