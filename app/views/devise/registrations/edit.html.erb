<%= render "brands/header" %>
<!-- EDIT ACCOUNT -->
<div class="container-fluid mt-5 mb-5">
    <div class="row p-4">
        <div class="mt-5 p-3"></div>
        <div class="col-lg-4 mx-auto">
            <div class="border rounded-3 shadow-sm bg-white p-4">
                <h3 class="text-capitalize fw-bold">Edit Your Account</h3>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                    <div class="field">
                        <%= f.label :email, class: "mt-3" %>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-2" %>
                    </div>
                    <div class="field">
                        <%= f.label :current_password, class: "text-capitalize mt-3" %>
                        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control mt-2" %>
                    </div>
                    <div class="field">
                        <%= f.label :province_id, class: "text-capitalize mt-3" %>
                        <%= f.select :province_id, Province.all.collect {|p| [ p.name, p.id ] }, { include_blank: "Select A Province" }, { class: "form-select mt-2" } %>
                    </div>
                    <div class="field">
                        <%= f.label :password, class: "mt-3" %> <i>(leave blank if you don't want to change it)</i>
                        <%= f.password_field :password, autocomplete: "new-password", class: "form-control mt-2", placeholder: "New Password (6 characters minimum)" %>
                    </div>
                    <div class="field mt-3">
                        <%= f.password_field :password_cofirm, autocomplete: "new-password", class: "form-control", placeholder: "Repeat Password" %>
                    </div>
                    <div class="actions mt-3">
                        <%= f.submit "Update", class: "btn btn-success text-uppercase fw-bold w-100" %>
                    </div>
                <% end %>
                <div class="actitons mt-2">
                    <%= button_to "Delete", registration_path(resource_name), data: { confirm: "You will not be able to undo this decision. Are you sure you want to delete this account?" }, method: :delete, class: "btn btn-danger text-uppercase fw-bold w-100" %>
                </div>
            </div>
            <div class="text-danger fw-bold p-4">
                <%= render "devise/shared/error_messages", resource: resource %>
                <p class="alert"><%= alert %></p>
            </div>
        </div>
    </div>
</div>
