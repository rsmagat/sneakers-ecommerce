<body id="customers-body">
    <div class="container-fluid mt-5 mb-5">
        <div class="row p-4">
            <a class="text-uppercase text-decoration-none text-warning text-center fs-3 p-3" href=""><b>Sneakers</b> R <b>Us</b></a>
            <div class="col-lg-4 mx-auto">
                <div class="border rounded-3 shadow-sm bg-white p-4">
                    <h3 class="text-capitalize fw-bold">Reset Password</h3>
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                        <div class="field">
                            <%= f.label :email, class: "mt-3" %><br />
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-2" %>
                        </div>

                        <div class="actions mt-3">
                            <%= f.submit "Send", class: "btn btn-success text-uppercase fw-bold w-100" %>
                        </div>
                    <% end %>
                    <p class="small mt-2">By continuing, you agree to our Conditions of Use and Privacy Notice.</p>
                    <hr class="mt-2">
                    <p class=" small mt-2">Have an account? <a class="text-decoration-none text-warning" href="<%= new_customer_session_path %>">Log in.</a></p>
                </div>
                <div class="text-danger fw-bold p-4">
                    <%= render "devise/shared/error_messages", resource: resource %>
                    <p class="notice"><%= notice %></p>
                    <p class="alert"><%= alert %></p>
                </div>
            </div>
        </div>
    </div>
</body>
